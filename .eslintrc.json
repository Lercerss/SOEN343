{
    "extends": "standard",
    "plugins": ["jest"],
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-unused-vars": "warn",
        "comma-dangle": "off",
        "camelcase": "error",
        "space-before-blocks": "off",
        "space-before-function-paren": "off",
        "template-curly-spacing": "off",
        "no-useless-constructor": "off",
        "no-array-constructor": "off",
        "max-len": ["warn", { "code": 120 }]
    },
    "env": {
        "jest": true
    }
}
